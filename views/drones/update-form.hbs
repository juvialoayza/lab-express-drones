<h2>Update the drone</h2>

  <form action="/drones/{{details._id}}/edit" method="POST">

    <label for="name">Name:</label>
    <input type="text" name="name" value="{{details.name}}">
    <br>
     <label for="propellers">Propellers:</label>
    <input type="number" name="propellers" value="{{details.propellers}}">
    <br>
    <label for="maxSpeed">MaxSpeed:</label>
    <input type="number" name="maxSpeed" value="{{details.maxSpeed}}">
    <br>
    <button type="submit">Editar</button>

  </form>
